#include <iostream>
#include <string>
#include <unordered_map>
#include <vector>
#include <algorithm>

// Represents a local area or point of interest
struct LocalLandmark {
    std::string name;
    std::string type;
    std::string description;
};

// Manages information about Upleta
class UpletaInfoSystem {
private:
    std::unordered_map<std::string, std::string> city_facts;
    std::vector<LocalLandmark> points_of_interest;

public:
    UpletaInfoSystem() {
        city_facts["Location"] = "Rajkot district, Gujarat, India";
        city_facts["Population"] = "Approx. 60,000 (2023)";
        city_facts["Known For"] = "Cotton and groundnut agriculture, local markets, and proximity to the Moj Dam.";

        points_of_interest.push_back({"Moj Dam", "Reservoir/Dam", "A major water reservoir and local picnic spot located near the city."});
        points_of_interest.push_back({"Moksh Marg", "Temple Area", "A local religious area with several small temples."});
        points_of_interest.push_back({"Market Yard", "Economic Center", "The primary market for local agricultural produce, mainly groundnut and cotton."});
    }

    void get_city_fact(const std::string& fact_name) const {
        if (city_facts.count(fact_name)) {
            std::cout << fact_name << ": " << city_facts.at(fact_name) << std::endl;
        } else {
            std::cout << "Fact not found: " << fact_name << std::endl;
        }
    }
    
    void search_landmarks(const std::string& search_term) const {
        std::cout << "\n--- Search Results for '" << search_term << "' ---" << std::endl;
        bool found = false;
        std::string lower_search_term = search_term;
        // Convert search term to lowercase for case-insensitive search
        std::transform(lower_search_term.begin(), lower_search_term.end(), lower_search_term.begin(), ::tolower);

        for (const auto& landmark : points_of_interest) {
            std::string lower_name = landmark.name;
            std::transform(lower_name.begin(), lower_name.end(), lower_name.begin(), ::tolower);
            
            if (lower_name.find(lower_search_term) != std::string::npos || 
                landmark.type.find(search_term) != std::string::npos) {
                std::cout << "Name: " << landmark.name << std::endl;
                std::cout << "Type: " << landmark.type << std::endl;
                std::cout << "Description: " << landmark.description << std::endl;
                std::cout << "----------------------------------------" << std::endl;
                found = true;
            }
        }
        if (!found) {
            std::cout << "No matching landmarks found." << std::endl;
        }
    }
};

int main() {
    UpletaInfoSystem info_system;
    
    // Display general facts
    info_system.get_city_fact("Location");
    info_system.get_city_fact("Known For");

    // Search for landmarks
    info_system.search_landmarks("Dam");
    info_system.search_landmarks("Center");

    return 0;
}
